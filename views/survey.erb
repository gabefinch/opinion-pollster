<div class="page-header">
  <h3><%= @survey.name() %>
  <a class="btn btn-sm btn-danger" href="/survey_edit/<%= @survey.id() %>">Update/delete this survey?</a></h3>
</div>
<ul>
  <% @survey.questions().each() do |question| %>
  <li><%= question.ask() %><a href="/edit_question/<%= question.id() %>/<%= @survey.id() %>"> <small>Edit/remove this question</small></a></li>
  <% end %>
</ul>
<form class="form-group" action="/question" method="post">
  <input type="hidden" name="survey_id" value="<%= @survey.id() %>">
  <label for="ask">Enter question</label>
  <input type="text" name="ask" placeholder="Why me?">
  <button name="button" class="btn btn-lg btn-success">Add question</button>
</form>

<a href="/" class="btn btn-lg btn-primary">Back</a>
